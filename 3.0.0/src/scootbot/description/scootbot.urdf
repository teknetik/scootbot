<?xml version="1.0"?>
<robot name="scootbot" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:arg name="use_ros2_control" default="true"/>

    <xacro:include filename="$(find scootbot)/description/model.xacro"/>

    <xacro:if value="$(arg use_ros2_control)">
        <xacro:include filename="$(find scootbot)/description/ros2_control.xacro"/>
    </xacro:if>
    <xacro:unless value="$(arg use_ros2_control)">
        <xacro:include filename="$(find scootbot)/description/gazebo_control.xacro"/>
    </xacro:unless>


 
</robot>